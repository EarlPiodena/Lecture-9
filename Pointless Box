#include <iostream>
using namespace std;

int main()
{
    cout << "Enter number 1 or 2: " << endl;
    int box;
    cin >> box;

    while (box != 0)
    {
        if (box == 1)
        {
            cout << "You have entered number 1" << endl;
        }
        else
        {
            cout << "You have entered number 2" << endl;
        }
        cout << "Enter number 1 or 2: " << endl;
        cin >> box;
    }
    cout << "Invalid Input";
}
